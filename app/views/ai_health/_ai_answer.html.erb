<div class="ai-answer-content">
  <div class="ai-answer-header">
    <h4>AIの回答</h4>
    <span class="ai-badge">AI生成</span>
  </div>
  
  <div class="ai-answer-text">
    <%= simple_format(answer) %>
  </div>
  
  <div class="ai-answer-meta">
    <small class="ai-answer-timestamp">
      回答時刻: <%= Time.current.strftime("%Y年%m月%d日 %H:%M") %>
    </small>
  </div>
</div>

<style>
.ai-answer-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12px;
}

.ai-answer-header h4 {
  margin: 0;
  color: #1f2937;
  font-size: 1.1rem;
  font-weight: 600;
}

.ai-badge {
  background: #4F46E5;
  color: white;
  padding: 2px 8px;
  border-radius: 12px;
  font-size: 0.75rem;
  font-weight: 500;
}

.ai-answer-text {
  color: #000000;
  line-height: 1.6;
  margin-bottom: 12px;
  background: rgba(255, 255, 255, 0.15);
  padding: 16px;
  border-radius: 8px;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.ai-answer-text p {
  margin-bottom: 8px;
  color: #000000;
}

.ai-answer-text p:last-child {
  margin-bottom: 0;
  color: #000000;
}

.ai-answer-text h1, .ai-answer-text h2, .ai-answer-text h3, .ai-answer-text h4, .ai-answer-text h5, .ai-answer-text h6 {
  color: #000000;
  margin-top: 1.5em;
  margin-bottom: 0.5em;
}

.ai-answer-text ul, .ai-answer-text ol, .ai-answer-text li, .ai-answer-text strong {
  color: #000000;
}

.ai-answer-meta {
  padding-top: 12px;
  border-top: 1px solid #e5e7eb;
}

.ai-answer-timestamp {
  color: #6b7280;
  font-size: 0.8rem;
}
</style>
