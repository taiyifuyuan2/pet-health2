<!-- 世帯ヘッダー -->
<div class="household-header">
  <div class="household-info">
    <div class="household-icon-large">
      <%= image_tag "icons/house.jpeg", alt: "世帯", class: "icon-large" %>
    </div>
    <div class="household-details">
      <h1 class="household-name"><%= @household.name %></h1>
      <div class="household-stats">
        <div class="household-stat">
          <span class="stat-icon">🐾</span>
          <%= @household.pets.count %>匹のペット
        </div>
        <div class="household-stat">
          <span class="stat-icon">👥</span>
          <%= @household.contacts.count %>人の連絡先
        </div>
        <div class="household-stat">
          <span class="stat-icon">📅</span>
          <%= @household.events.count %>件の予定
        </div>
      </div>
    </div>
  </div>
  <div class="household-actions">
    <%= link_to "編集", edit_household_path(@household), class: "btn btn-secondary" %>
    <%= link_to "ダッシュボード", dashboard_path, class: "btn btn-primary" %>
  </div>
</div>

<!-- 統計カード -->
<div class="stats-grid">
  <div class="stat-card">
    <div class="stat-icon">🐾</div>
    <div class="stat-content">
      <div class="stat-number"><%= @household.pets.count %></div>
      <div class="stat-label">登録ペット</div>
    </div>
  </div>
  <div class="stat-card">
    <div class="stat-icon">👥</div>
    <div class="stat-content">
      <div class="stat-number"><%= @household.contacts.count %></div>
      <div class="stat-label">連絡先</div>
    </div>
  </div>
  <div class="stat-card">
    <div class="stat-icon">📅</div>
    <div class="stat-content">
      <div class="stat-number"><%= @household.events.count %></div>
      <div class="stat-label">登録予定</div>
    </div>
  </div>
  <div class="stat-card">
    <div class="stat-icon">
      <%= image_tag "icons/user.jpg", alt: "ユーザー", class: "icon" %>
    </div>
    <div class="stat-content">
      <div class="stat-number"><%= @household.memberships.count %></div>
      <div class="stat-label">メンバー</div>
    </div>
  </div>
</div>

<!-- メインコンテンツ -->
<div class="household-grid">
  <!-- ペット一覧 -->
  <div class="household-card pets-section">
    <div class="card-header">
      <h2 class="card-title">🐾 ペット一覧</h2>
      <%= link_to "ペットを追加", new_pet_path, class: "btn btn-sm btn-primary" %>
    </div>
    <div class="pets-content">
      <% if @household.pets.any? %>
        <% @household.pets.each do |pet| %>
          <div class="pet-item">
            <div class="pet-info">
              <div class="pet-avatar">
                <span class="pet-icon">🐾</span>
              </div>
              <div class="pet-details">
                <div class="pet-name"><%= pet.name %></div>
                <div class="pet-species"><%= pet.species %></div>
                <% if pet.sex.present? %>
                  <div class="pet-sex"><%= pet.sex %></div>
                <% end %>
              </div>
            </div>
            <div class="pet-actions">
              <%= link_to "詳細", pet, class: "btn btn-sm btn-secondary" %>
              <%= link_to "編集", edit_pet_path(pet), class: "btn btn-sm btn-outline" %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="empty-state">
          <div class="empty-icon">🐾</div>
          <p>ペットが登録されていません</p>
          <%= link_to "ペットを追加", new_pet_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 連絡先一覧 -->
  <div class="household-card contacts-section">
    <div class="card-header">
      <h2 class="card-title">👥 連絡先一覧</h2>
      <%= link_to "連絡先を追加", new_contact_path, class: "btn btn-sm btn-primary" %>
    </div>
    <div class="contacts-content">
      <% if @household.contacts.any? %>
        <% @household.contacts.each do |contact| %>
          <div class="contact-item">
            <div class="contact-info">
              <div class="contact-avatar">
                <span class="contact-icon">
                  <%= image_tag "icons/user.jpg", alt: "ユーザー", class: "icon-small" %>
                </span>
              </div>
              <div class="contact-details">
                <div class="contact-name"><%= contact.name %></div>
                <div class="contact-birthday">🎂 <%= contact.birthday.strftime('%m月%d日') %></div>
                <% if contact.relation.present? %>
                  <div class="contact-relation"><%= contact.relation %></div>
                <% end %>
              </div>
            </div>
            <div class="contact-actions">
              <%= link_to "詳細", contact, class: "btn btn-sm btn-secondary" %>
              <%= link_to "編集", edit_contact_path(contact), class: "btn btn-sm btn-outline" %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="empty-state">
          <div class="empty-icon">👥</div>
          <p>連絡先が登録されていません</p>
          <%= link_to "連絡先を追加", new_contact_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
