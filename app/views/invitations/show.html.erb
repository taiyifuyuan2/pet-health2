  margin: 0 0 16px 0;
  color: #666;
  font-style: italic;
}

@media (max-width: 768px) {
  .invitation-container {
    margin: 0;
    border-radius: 0;
    min-height: 100vh;
  }
  
  .invitation-header, .invitation-content {
    padding: 24px;
  }
  
  .info-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 4px;
  }
}
</style>
