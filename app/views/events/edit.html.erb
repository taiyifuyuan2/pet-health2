<div class="row">
  <div class="col-6">
    <div class="card">
      <div class="card-header">
        <h2 class="card-title">予定を編集</h2>
      </div>
      
      <%= form_with model: @event, local: true do |form| %>
        <% if @event.errors.any? %>
          <div class="alert">
            <h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>
            <ul>
              <% @event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :subject_id, "ペットを選択" %>
          <%= form.select :subject_id, 
                          options_from_collection_for_select(@pets, :id, :name, @event.subject_id), 
                          { prompt: "ペットを選択してください" }, 
                          { class: "form-control" } %>
          <%= form.hidden_field :subject_type, value: "Pet" %>
        </div>

        <div class="form-group">
          <%= form.label :kind, "種類" %>
          <%= form.select :kind, 
                          [["ワクチン", "vaccine"], ["投薬", "medication"], ["健診", "checkup"], ["その他", "other"], ["誕生日", "birthday"]], 
                          { selected: @event.kind }, 
                          { class: "form-control" } %>
        </div>

        <div class="form-group">
          <%= form.label :title, "タイトル" %>
          <%= form.text_field :title, class: "form-control", placeholder: "例: フィラリア予防薬" %>
        </div>

        <div class="form-group">
          <%= form.label :scheduled_on, "日付" %>
          <%= form.date_field :scheduled_on, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :scheduled_time, "時刻（任意）" %>
          <%= form.time_field :scheduled_time, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :remind_before_minutes, "リマインド" %>
          <%= form.select :remind_before_minutes, 
                          [["リマインドなし", 0], 
                           ["30分前", 30], 
                           ["1時間前", 60], 
                           ["2時間前", 120], 
                           ["6時間前", 360], 
                           ["12時間前", 720], 
                           ["1日前", 1440], 
                           ["2日前", 2880], 
                           ["1週間前", 10080]], 
                          { selected: @event.remind_before_minutes }, 
                          { class: "form-control" } %>
          <small class="form-text text-muted">予定の何日前に通知を受け取るかを選択してください</small>
        </div>

        <div class="form-group">
          <%= form.label :note, "メモ" %>
          <%= form.text_area :note, class: "form-control", rows: 3, placeholder: "特記事項があれば記入してください" %>
        </div>

        <div class="form-group">
          <%= form.submit "予定を更新", class: "btn btn-primary" %>
          <%= link_to "キャンセル", @event, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


