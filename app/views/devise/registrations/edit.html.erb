<!-- アカウント設定ヘッダー -->
<div class="settings-header">
  <div class="settings-header-content">
    <h1 class="settings-title">⚙️ アカウント設定</h1>
    <p class="settings-subtitle">アカウント情報とセキュリティ設定</p>
  </div>
  <div class="settings-header-actions">
    <%= link_to "マイページ", mypage_path, class: "btn btn-secondary" %>
  </div>
</div>

<!-- 設定フォーム -->
<div class="settings-grid">
  <!-- アカウント情報 -->
  <div class="settings-card">
    <div class="card-header">
      <h2 class="card-title">
        <%= image_tag "icons/user.jpeg", alt: "ユーザー", class: "icon-inline" %>
        アカウント情報
      </h2>
    </div>
    <div class="settings-form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "account-form" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email, "メールアドレス", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレスを入力" %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="form-help">
              <span class="help-icon">⏳</span>
              確認待ちのメールアドレス: <%= resource.unconfirmed_email %>
            </div>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :password, "新しいパスワード", class: "form-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "新しいパスワードを入力" %>
          <div class="form-help">
            <span class="help-icon">💡</span>
            変更しない場合は空白のまま
            <% if @minimum_password_length %>
              （<%= @minimum_password_length %>文字以上）
            <% end %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワードを再入力" %>
        </div>

        <div class="form-group">
          <%= f.label :current_password, "現在のパスワード", class: "form-label" %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "現在のパスワードを入力" %>
          <div class="form-help">
            <span class="help-icon">🔒</span>
            変更を確認するために必要
          </div>
        </div>

        <div class="form-actions">
          <%= f.submit "アカウントを更新", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 危険な操作 -->
  <div class="settings-card danger-card">
    <div class="card-header">
      <h2 class="card-title">⚠️ 危険な操作</h2>
    </div>
    <div class="danger-content">
      <div class="danger-section">
        <div class="danger-icon">🗑️</div>
        <div class="danger-info">
          <h3 class="danger-title">アカウント削除</h3>
          <p class="danger-description">
            アカウントを削除すると、すべてのデータが永久に失われます。<br>
            この操作は取り消すことができません。
          </p>
        </div>
      </div>
      <div class="danger-actions">
        <%= button_to "アカウントを削除", registration_path(resource_name), 
                      data: { confirm: "本当にアカウントを削除しますか？この操作は取り消せません。", 
                              turbo_confirm: "本当にアカウントを削除しますか？この操作は取り消せません。" }, 
                      method: :delete, 
                      class: "btn btn-danger btn-lg" %>
      </div>
    </div>
  </div>
</div>
