<!-- ペット編集ヘッダー -->
<div class="pet-edit-header">
  <div class="pet-edit-content">
    <h1 class="pet-edit-title">🐾 ペット情報を編集</h1>
    <p class="pet-edit-subtitle"><%= @pet.name %>の情報を更新してください</p>
  </div>
  <div class="pet-edit-actions">
    <%= link_to "戻る", @pet, class: "btn btn-outline" %>
  </div>
</div>

<!-- ペット編集フォーム -->
<div class="pet-edit-container">
  <div class="pet-edit-card">
    <div class="pet-edit-header-card">
      <h2 class="pet-edit-card-title">ペットの詳細情報</h2>
      <p class="pet-edit-card-subtitle">基本情報を入力してください</p>
    </div>
    
    <div class="pet-edit-form">
      <%= form_with model: @pet, local: true, multipart: true, class: "pet-form" do |form| %>
        <% if @pet.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(@pet.errors.count, "error") %> prohibited this pet from being saved:</h4>
            <ul>
              <% @pet.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <% if @pet.errors[:profile_image].any? %>
          <div class="alert alert-danger">
            <ul>
              <% @pet.errors[:profile_image].each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- プロフィール写真 -->
        <div class="form-group pet-image-group">
          <label class="form-label">プロフィール写真</label>
          <div class="pet-image-container">
            <div class="pet-image-preview">
              <% if @pet.profile_image.attached? %>
                <%= image_tag @pet.profile_image.variant(resize_to_fill: [120, 120]), alt: "プロフィール写真", class: "pet-image", id: "pet-image-preview" %>
              <% else %>
                <img src="<%= @pet.profile_image_url %>" alt="プロフィール写真" class="pet-image" id="pet-image-preview">
              <% end %>
            </div>
            <div class="pet-image-actions">
              <%= form.file_field :profile_image, class: "form-control-file", id: "pet-image-input", accept: "image/jpeg,image/png,image/gif,image/webp" %>
              <label for="pet-image-input" class="btn btn-outline">写真を選択</label>
              <% if @pet.profile_image.attached? %>
                <div class="checkbox-group">
                  <%= form.check_box :remove_profile_image, class: "checkbox-input", id: "remove-profile-image" %>
                  <label for="remove-profile-image" class="checkbox-label">
                    <span class="checkbox-text">現在の写真を削除</span>
                  </label>
                </div>
              <% end %>
            </div>
          </div>
          <div class="form-help">
            <span class="help-icon">💡</span>
            JPEG、PNG、GIF、WebP形式の画像をアップロードできます（最大5MB）
          </div>
        </div>

        <div class="form-group">
          <%= form.label :name, "名前", class: "form-label" %>
          <%= form.text_field :name, class: "form-control", placeholder: "例: ポチ" %>
        </div>

        <div class="form-row">
          <div class="form-group">
            <%= form.label :species, "種類", class: "form-label" %>
            <%= form.select :species, 
                            [["犬", "犬"], ["猫", "猫"], ["うさぎ", "うさぎ"], ["ハムスター", "ハムスター"], ["その他", "その他"]], 
                            { prompt: "選択してください" }, 
                            { class: "form-control" } %>
          </div>

          <div class="form-group">
            <%= form.label :sex, "性別", class: "form-label" %>
            <%= form.select :sex, 
                            [["オス", "オス"], ["メス", "メス"], ["不明", "不明"]], 
                            { prompt: "選択してください" }, 
                            { class: "form-control" } %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group">
            <%= form.label :birthdate, "誕生日", class: "form-label" %>
            <%= form.date_field :birthdate, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :weight_kg, "体重 (kg)", class: "form-label" %>
            <%= form.number_field :weight_kg, class: "form-control", step: 0.1, placeholder: "例: 5.5" %>
          </div>
        </div>

        <div class="form-group">
          <%= form.label :breed_id, "犬種", class: "form-label" %>
          <%= form.select :breed_id, 
                          Breed.all.map { |breed| [breed.name, breed.id] }, 
                          { prompt: "選択してください" }, 
                          { class: "form-control" } %>
        </div>

        <div class="form-group">
          <%= form.label :notes, "メモ", class: "form-label" %>
          <%= form.text_area :notes, class: "form-control", rows: 3, placeholder: "特記事項があれば記入してください" %>
        </div>

        <div class="form-actions">
          <%= form.submit "ペット情報を更新", class: "btn btn-primary btn-lg btn-full" %>
          <%= link_to "戻る", @pet, class: "btn btn-outline btn-lg btn-full" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const petImageInput = document.getElementById('pet-image-input');
  const petImagePreview = document.getElementById('pet-image-preview');
  const removeProfileImageCheckbox = document.getElementById('remove-profile-image');

  petImageInput.addEventListener('change', function(e) {
    const file = e.target.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = function(e) {
        petImagePreview.src = e.target.result;
      };
      reader.readAsDataURL(file);
    }
  });

  if (removeProfileImageCheckbox) {
    removeProfileImageCheckbox.addEventListener('change', function() {
      if (this.checked) {
        petImagePreview.src = 'https://ui-avatars.com/api/?name=ペット&background=random&color=fff&size=200';
        petImageInput.value = '';
      } else {
        <% if @pet.profile_image.attached? %>
          petImagePreview.src = '<%= @pet.profile_image_url %>';
        <% else %>
          petImagePreview.src = 'https://ui-avatars.com/api/?name=ペット&background=random&color=fff&size=200';
        <% end %>
      }
    });
  }
});
</script>
